{
   "manifest_version":2,
   "name":"Hot Leads Page Handler",
	"description":"A listener/scraper for leads data",
	"version":"0.1.0",
	
	"permissions":["https://*.linkedin.com/*","http://*.linkedin.com/*", "http://*.lead411.com/*", "https://*.lead411.com/*", "https://hotleads.firebaseio.com/*" ],

	"page_action":{
		"default_icon": {
			"19": "g/icon_19.png",
            "38": "g/icon_38.png" 
		},
		"default_popup":"popup.html"
	},		
	
	"background": {
		"persistent":false,
		"scripts":["event.js","scrapeMap.js","doublemetaphone.js","lexo.js","sicdb.js"]
	},	
	
	"content_scripts": [
		{
		  "matches": ["https://www.linkedin.com/profile/view*","http://www.lead411.com/company_*"],
		  "css": ["hilite.css"],
		  "js": ["inject.js"]
		}
    ]

}
